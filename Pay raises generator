def salary():
    salary = float(input('Enter the salary you would like to evaluate.
    \nJust whole dollars, no $ signs or cents required.\n\t\t\t\t$'))
    rate = 1.05
    years = 3
    s1 = salary * rate
    s2 = s1 * rate
    s3 = s2 * rate
    print(f'Your current salary is \t\t\t${salary:.2f}
    \nAfter your first raise you will be paid: \t\t${s1:.2f}
    \nAfter your second raise you will be paid: \t${s2:.2f}
    \nYour final raise will be: \t\t\t${s3:.2f}')
